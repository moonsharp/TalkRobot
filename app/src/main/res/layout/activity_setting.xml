<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="kk.qisheng.talkrobot.ui.activity.SettingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/top_bar"
        android:gravity="center"
        android:text="设置"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <include layout="@layout/include_common_line3" />

    <RelativeLayout
        android:id="@+id/rl_change_speaker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_white_gray"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="设置机器人声音"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/arrow_next"
            android:padding="5dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp" />
    </RelativeLayout>

    <include layout="@layout/include_common_line" />

    <include layout="@layout/include_common_line3" />

    <TextView
        android:id="@+id/tv_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_white_gray"
        android:gravity="center"
        android:padding="12dp"
        android:text="清空记录"
        android:textColor="#88ff0000"
        android:textSize="16sp"
        android:visibility="visible" />

</LinearLayout>
