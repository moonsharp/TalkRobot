<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="1.0dip" />
                    <stroke
                        android:width="5dp"
                        android:color="#99cc00" />
                </shape>
            </item>
            <item android:drawable="@drawable/photo_selcted" />
        </layer-list>
    </item>

    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="1.5dip" />
                    <stroke android:width="1.5dp" android:color="@android:color/white" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>